{
  "name": "myapp",
  "version": "2.0.0",
  "description": "Modern visitor counter web application",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:coverage": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --detectOpenHandles --forceExit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "echo 'Build stage - checking syntax and dependencies' && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pinkaru/my_app.git"
  },
  "keywords": [
    "express",
    "mongodb",
    "visitor-counter"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Pinkaru/my_app/issues"
  },
  "homepage": "https://github.com/Pinkaru/my_app#readme",
  "dependencies": {
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "mongoose": "^8.9.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
